#include <stdio.h>
#include <math.h>

int main() {

	int n, i;

	printf("Enter the number of values: ");
	scanf("%d", &n);

	float arr[n], mean = 0, variance = 0, deviation;

	printf("Enter values : ");
	for (i = 0; i < n; i++){
		
	scanf("%f", &arr[i]);
		mean += arr[i];
	}

	mean /= n;

	for (i = 0; i< n; i++){
		variance += pow(arr[i] - mean, 2);
}

	variance /= n;
	deviation = sqrt(variance);

	printf("Mean = %.2f\nVariance = %.2f\nDeviation = %.2f\n", mean, variance, deviation);

	return 0;
}
